dropshadow()
  -webkit-svg-shadow: arguments

body
  padding: 20px
  font: 14px sans-serif

  .timeline-toolbar
    background-color: white
    position: absolute
    top: 102px
    border-top: 1px solid grey
    border-right: 2px solid grey
    border-bottom: 2px solid grey
    border-bottom-right-radius: 3px
    border-top-right-radius: 3px
    .timeline-toolbar-button
      padding: 5px
      cursor: pointer
      &.toggled
        background-color: #d1d1d1
      &:hover
        background-color: rgb(6,128,196)
      &:active
        background-color: rgb(4,110,177)

  .fillOverlay
    fill: #eee

  .shadow
    stroke: white
    dropshadow black 0 0.5px 10px

  .overlay
    cursor: move
    fill: none
    pointer-events: all

  .main
    text
      font: 12px sans-serif

    .laneLines
      stroke: white

    .todayLine
      stroke: #55f
      stroke-width: 1
      dropshadow #bbb 1px 0 4px
      shape-rendering: crispEdges

    .triangle
      fill: white
      dropshadow grey 0 1px 10px
      shape-rendering: crispEdges

    .axis
      stroke: grey
      stroke-width: 1
      shape-rendering: crispEdges
      text
        font: 11px sans-serif
        stroke: none

    .mainItem
      stroke: #bbb
      stroke-width: 0.5
      fill: #ddd
      cursor: pointer
      &.hover
        stroke: lightblue
        fill: lightblue
      path
        fill: black
      text
        fill: black
        stroke: none
